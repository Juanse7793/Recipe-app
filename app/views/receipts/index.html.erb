<div class="recipes">
    <h2>Recipes</h2>
    <div class="add btn">
        <%= link_to 'Add Recipe', user_receipts_path(user_id:6)  method: :post%>
    </div>
    <ul class="recipes-list">
        <% @receipts.each do |receipt| %>
            <li class="recipe">
                <div class="label">
                    <h4><%=receipt.name%></h4>
                    <a>REMOVE</a>
                </div>
                <div class="desc">
                    <p><%=receipt.description%></p>
                </div>
            </li>
        <%end%>
    </ul>
</div>