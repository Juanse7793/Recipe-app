<div class="recipes">
    <h2>Recipes</h2>
    <div class="add-btn">
      <%= link_to new_user_receipt_path do %>
          <button class="add-recipe"> Add Recipe </button>
        <% end %>
    </div>
    <ul class="recipes-list">
        <% @receipts.each do |receipt| %>
            <li class="recipe">
                <div class="label">
                    <h4><%=receipt.name%></h4>
                    <a>REMOVE</a>
                </div>
                <div class="desc">
                    <p><%=receipt.description%></p>
                </div>
            </li>
        <%end%>
    </ul>
</div>